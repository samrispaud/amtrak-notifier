<h1>New Order</h1>

<%= form_for @order, url: {action: "create"} do |f| %>
  <div class="form-group">
    <%= label_tag(:ticker, "Ticker:") %>
    <%= f.text_field :ticker, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:quantity, "Quantity:") %>
    <%= f.text_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:order_type, "Trade type:") %>
    <%= f.select :order_type, ["BUY", "SELL"] %>
  </div>
  <div class="form-group">
    <%= label_tag(:game_id, "Game:") %>
    <%= f.select :game_id, @games.collect { |game| [ game.name, game.id ] } %>
  </div>
  <br />
  <button type="submit" class="btn btn-primary">Create</button>
<% end %>

<%= link_to 'Back', orders_path %>
