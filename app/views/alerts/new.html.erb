<h1>New Alert</h1>

<%= form_for @alert, url: {action: "create"} do |f| %>
  <div class="form-group">
    <%= label_tag(:exchange, "exchange (check google):") %>
    <%= f.text_field :exchange, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:ticker, "Ticker:") %>
    <%= f.text_field :ticker, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:comparison_logic, "Trade type:") %>
    <%= f.select :comparison_logic, ["GREATER THAN", "LESS THAN"] %>
  </div>
  <div class="form-group">
    <%= label_tag(:price, "Price to trigger:") %>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:order_id, "Order:") %>
    <%= f.select :order_id, @orders.collect { |order| [ "#{order.quantity} of #{order.ticker} - #{order.game.name}", order.id ] } %>
  </div>
  <br />
  <button type="submit" class="btn btn-primary">Create</button>
<% end %>

<%= link_to 'Back', alerts_path %>
